<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Heading" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorLang</item>
        <item name="android:typeface">sans</item>
        <item name="android:lineSpacingExtra">.10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigLink" parent="android:Widget.TextView">
        <item name="android:textColor">#0000ee</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NormalLink" parent="android:Widget.TextView">
        <item name="android:textColor">#0000ee</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Default" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorLang</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
